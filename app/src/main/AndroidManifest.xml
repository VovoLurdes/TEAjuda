        </activity>
        <activity
            android:name=".CriarRotina"
            android:label="@string/title_activity_criar_rotina"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".takepicture"
            android:label="@string/title_activity_takepicture" >
