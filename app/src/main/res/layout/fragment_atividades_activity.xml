<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.teajuda.teajuda.Atividades_activity$PlaceholderFragment"
    android:orientation="vertical"
    android:background="@drawable/fundo4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/txtRotina"
        android:textSize="35dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#009688"
        android:layout_marginTop="5dp"
        />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_gravity="center"
            android:id="@+id/imgAtividade"
            android:src="@drawable/ic_no_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/txtAtividade"
        android:hint="TAREFA"
        android:layout_weight="1"
        android:textSize="25dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_play"
        android:layout_gravity="center"
        android:id="@+id/imgAudioAtividade"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        />

</LinearLayout>
